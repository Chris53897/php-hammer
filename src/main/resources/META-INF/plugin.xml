<idea-plugin>
    <id>net.rentalhost.plugins.php.hammer</id>
    <name>PHP Hammer</name>
    <version>0.1.0</version>
    <vendor email="david.rodrigues@rentalhost.net">Rentalhost.net</vendor>

    <description><![CDATA[ PHP Hammer is a plugin that adds inspections in the PHP language with support for quick fixes. ]]></description>

    <idea-version since-build="221" />

    <depends>com.intellij.modules.platform</depends>
    <depends>com.jetbrains.php</depends>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection language="PHP"
                         groupPath="PHP,PHP Hammer"
                         groupName="Code Style"
                         enabledByDefault="true"
                         displayName="Nullable types format"
                         level="WEAK WARNING"
                         shortName="NullableTypesFormatInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.codeStyle.NullableTypesFormatInspection" />

        <localInspection language="PHP"
                         groupPath="PHP,PHP Hammer"
                         groupName="Code Style"
                         enabledByDefault="true"
                         displayName="Nullable type on the rightmost side"
                         level="WEAK WARNING"
                         shortName="NullableTypeRightmostInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.codeStyle.NullableTypeRightmostInspection" />
    </extensions>
</idea-plugin>
