<idea-plugin>
    <id>net.rentalhost.plugins.php.hammer</id>
    <name>PHP Hammer</name>
    <version>0.3.0</version>
    <vendor email="david.rodrigues@rentalhost.net">Rentalhost.net</vendor>

    <idea-version since-build="221" />

    <description><![CDATA[
        <strong>ðŸ”¨ PHP Hammer</strong> is a plugin that adds <a href="https://github.com/hammer-tools/php-hammer/wiki/Inspections">new inspections</a>
        in the PHP language with support for quick-fixes.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.jetbrains.php</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Code Style -->
        <localInspection language="PHP"
                         groupPath="PHP,ðŸ”¨ PHP Hammer"
                         groupName="Code Style"
                         enabledByDefault="true"
                         displayName="Nullable type format"
                         level="WEAK WARNING"
                         shortName="NullableTypeFormatInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.codeStyle.NullableTypeFormatInspection" />

        <localInspection language="PHP"
                         groupPath="PHP,ðŸ”¨ PHP Hammer"
                         groupName="Code Style"
                         enabledByDefault="true"
                         displayName="Nullable type on the rightmost side"
                         level="WEAK WARNING"
                         shortName="NullableTypeRightmostInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.codeStyle.NullableTypeRightmostInspection" />

        <localInspection language="PHP"
                         groupPath="PHP,ðŸ”¨ PHP Hammer"
                         groupName="Code Style"
                         enabledByDefault="true"
                         displayName="Array can be packed"
                         level="WEAK WARNING"
                         shortName="ArrayPackableInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.codeStyle.ArrayPackableInspection" />

        <localInspection language="PHP"
                         groupPath="PHP,ðŸ”¨ PHP Hammer"
                         groupName="Code Style"
                         enabledByDefault="true"
                         displayName="Case separator format"
                         level="WEAK WARNING"
                         shortName="CaseSeparatorFormatInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.codeStyle.CaseSeparatorFormatInspection" />

        <localInspection language="PHP"
                         groupPath="PHP,ðŸ”¨ PHP Hammer"
                         groupName="Code Style"
                         enabledByDefault="true"
                         displayName="Sort use() variables"
                         level="WEAK WARNING"
                         shortName="SortUseVariablesInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.codeStyle.SortUseVariablesInspection" />

        <localInspection language="PHP"
                         groupPath="PHP,ðŸ”¨ PHP Hammer"
                         groupName="Code Style"
                         enabledByDefault="true"
                         displayName="Parameter defaults to null"
                         level="WEAK WARNING"
                         shortName="ParameterDefaultsNullInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.codeStyle.ParameterDefaultsNullInspection" />

        <localInspection language="PHP"
                         groupPath="PHP,ðŸ”¨ PHP Hammer"
                         groupName="Code Style"
                         enabledByDefault="true"
                         displayName="Parameter is implicitly nullable"
                         level="WEAK WARNING"
                         shortName="ParameterImplicitlyNullableInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.codeStyle.ParameterImplicitlyNullableInspection" />

        <localInspection language="PHP"
                         groupPath="PHP,ðŸ”¨ PHP Hammer"
                         groupName="Code Style"
                         enabledByDefault="true"
                         displayName="Anonymous function can be static"
                         level="WEAK WARNING"
                         shortName="AnonymousFunctionStaticInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.codeStyle.AnonymousFunctionStaticInspection" />

        <localInspection language="PHP"
                         groupPath="PHP,ðŸ”¨ PHP Hammer"
                         groupName="Code Style"
                         enabledByDefault="true"
                         displayName="Replace function cast to type cast"
                         level="WEAK WARNING"
                         shortName="CastIntvalInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.codeStyle.CastIntvalInspection" />

        <localInspection language="PHP"
                         groupPath="PHP,ðŸ”¨ PHP Hammer"
                         groupName="Code Style"
                         enabledByDefault="true"
                         displayName="String can be simplified"
                         level="WEAK WARNING"
                         shortName="StringSimplificationInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.codeStyle.StringSimplificationInspection" />

        <localInspection language="PHP"
                         groupPath="PHP,ðŸ”¨ PHP Hammer"
                         groupName="Code Style"
                         enabledByDefault="true"
                         displayName="Call to __toString() can be simplified"
                         level="WEAK WARNING"
                         shortName="ToStringSimplificationInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.codeStyle.ToStringSimplificationInspection" />

        <localInspection language="PHP"
                         groupPath="PHP,ðŸ”¨ PHP Hammer"
                         groupName="Code Style"
                         enabledByDefault="true"
                         displayName="Type cast normalization"
                         level="WEAK WARNING"
                         shortName="TypeCastNormalizationInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.codeStyle.TypeCastNormalizationInspection" />

        <localInspection language="PHP"
                         groupPath="PHP,ðŸ”¨ PHP Hammer"
                         groupName="Code Style"
                         enabledByDefault="true"
                         displayName="Comparison order with scalar normalization"
                         level="WEAK WARNING"
                         shortName="ComparisonScalarOrderInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.codeStyle.ComparisonScalarOrderInspection" />

        <localInspection language="PHP"
                         groupPath="PHP,ðŸ”¨ PHP Hammer"
                         groupName="Code Style"
                         enabledByDefault="true"
                         displayName="Class self-reference format normalization"
