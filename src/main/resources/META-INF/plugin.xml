                         shortName="CompactReplacementInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.codeStyle.CompactReplacementInspection" />

        <!-- Flow Optimization -->
        <localInspection language="PHP"
                         groupPath="PHP,ðŸ”¨ PHP Hammer"
                         groupName="Flow Optimization"
                         enabledByDefault="true"
                         displayName="Redundant return point"
                         level="WEAK WARNING"
                         shortName="RedundantReturnPointInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.flowOptimization.RedundantReturnPointInspection" />

        <!-- Dead Code -->
        <localInspection language="PHP"
                         groupPath="PHP,ðŸ”¨ PHP Hammer"
                         groupName="Dead Code"
                         enabledByDefault="true"
                         displayName="Unused use() variable"
                         level="WEAK WARNING"
                         shortName="UnusedUseVariableInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.deadCode.UnusedUseVariableInspection" />

        <localInspection language="PHP"
                         groupPath="PHP,ðŸ”¨ PHP Hammer"
                         groupName="Dead Code"
                         enabledByDefault="true"
                         displayName="Unused use() reference for variable"
                         level="WEAK WARNING"
                         shortName="UnusedUseVariableReferenceInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.deadCode.UnusedUseVariableReferenceInspection" />

        <!-- Code Error -->
        <localInspection language="PHP"
                         groupPath="PHP,ðŸ”¨ PHP Hammer"
                         groupName="Code Error"
                         enabledByDefault="true"
                         displayName="Static anonymous function can't access $this"
                         level="ERROR"
                         shortName="StaticAnonymousFunctionCannotAccessThisInspection"
                         implementationClass="net.rentalhost.plugins.php.hammer.inspections.codeError.StaticAnonymousFunctionCannotAccessThisInspection" />

        <!-- Plugin -->
        <applicationService serviceImplementation="net.rentalhost.plugins.services.SettingsService" />

        <notificationGroup id="net.rentalhost.plugins.notification.INSTALLED"
                           displayType="STICKY_BALLOON" />
        <notificationGroup id="net.rentalhost.plugins.notification.UPDATED"
                           displayType="STICKY_BALLOON" />
    </extensions>

    <applicationListeners>
        <listener
            activeInHeadlessMode="false"
            class="net.rentalhost.plugins.services.listeners.PluginUpdateListener"
            topic="com.intellij.openapi.project.ProjectManagerListener" />
    </applicationListeners>
</idea-plugin>
